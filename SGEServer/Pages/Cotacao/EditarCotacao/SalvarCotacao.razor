
<style>
    /* cor do texto digitado no mudtext */
    .mud-input > input.mud-input-root {
        color: #fff !important;
    }
    /* cor do label do mudtext */
    .mud-input-control > .mud-input-control-input-container > .mud-input-label-inputcontrol {
        color: #fff !important;
    }

    .mud-input > input.mud-input-root.mud-input-root-filled, div.mud-input-slot.mud-input-root.mud-input-root-filled {
        background-color: #063862;
    }

    .mud-dialog .mud-dialog-title {
        padding: 0px;
    }

    .paper-style {
        background-color: #011E36;
        border-radius: 10px;
        padding: 10px;
    }
</style>

<MudGrid Style="max-width: 600px;" Class="paper-style">
    <MudItem xs="10"></MudItem>
    <MudItem xs="2">
        <MudButton Color="Color.Error" OnClick="BtnFechar" Variant="Variant.Filled">
            X
        </MudButton>
    </MudItem>
    <MudItem Class="d-flex justify-center align-center" xs="12">
        <MudText Style="font-weight: 700; text-transform:uppercase; color:#fff;">Deseja Salvar as mudanças na cotação @NumCotacao ?</MudText>
    </MudItem>
	<MudItem Class="d-flex justify-center align-center mb-7" xs="6">
		<MudButton OnClick="BtnCancelar" Variant="Variant.Filled" Color="Color.Error">
			Cancelar
		</MudButton>
	</MudItem>
	<MudItem Class="d-flex justify-center align-center" xs="6">
		<MudButton OnClick="BtnConfirmar" Variant="Variant.Filled" Color="Color.Success" Class="mb-7">
			Salvar
		</MudButton>
	</MudItem>
	
</MudGrid>

@code {
    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string NumCotacao { get; set; }

    private void BtnCancelar()
    {
        MudDialog!.Close(DialogResult.Cancel());
    }

    private void BtnConfirmar()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    
    private void BtnFechar()
    {
        MudDialog!.Close(DialogResult.Cancel());
    }
}
